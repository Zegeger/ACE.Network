<Window x:Class="ACE.Network.Tools.TextDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACE.Network.Tools"
        mc:Ignorable="d"
        Title="TextDetails" Height="450" Width="800">
    <Grid>
        <ScrollViewer Margin="10">
            <TextBlock x:Name="Details" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="752" />
        </ScrollViewer>

    </Grid>
</Window>
